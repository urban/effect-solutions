{
  "name": "effect-solutions-mcp",
  "version": "0.1.3",
  "description": "Effect-first MCP server for Effect TypeScript best practices documentation",
  "type": "module",
  "bin": {
    "effect-solutions-mcp": "./dist/effect-solutions-mcp"
  },
  "scripts": {
    "build": "bun build src/server.ts --outdir dist --target bun",
    "build:exe": "bun build src/server.ts --compile --outfile dist/effect-solutions-mcp",
    "prepublishOnly": "rm -rf dist && bun run build && bun run build:exe",
    "dev": "bun src/server.ts",
    "prepare": "[ -n \"$CI\" ] || bunx effect-language-service patch"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "bun": ">=1.1.0"
  },
  "dependencies": {
    "@effect/ai": "^0.32.1",
    "@effect/platform-bun": "^0.83.0",
    "@effect/schema": "^0.75.5",
    "effect": "^3.19.4"
  },
  "devDependencies": {
    "@effect/language-service": "^0.56.0",
    "@types/node": "^24.10.1",
    "bun-types": "^1.3.2",
    "typescript": "^5"
  },
  "keywords": [
    "effect",
    "typescript",
    "best-practices",
    "docs",
    "mcp",
    "modelcontextprotocol"
  ],
  "author": "Kit Langton",
  "license": "MIT"
}
