{
  "name": "effect-solutions",
  "version": "0.2.4",
  "description": "Docs + helper CLI for Effect TypeScript best practices",
  "type": "module",
  "bin": {
    "effect-solutions": "./dist/effect-solutions"
  },
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target bun",
    "build:exe": "bun build src/cli.ts --compile --outfile dist/effect-solutions",
    "prepublishOnly": "rm -rf dist && bun run build && bun run build:exe",
    "dev": "bun src/cli.ts",
    "prepare": "[ -n \"$CI\" ] || bunx effect-language-service patch"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "dependencies": {
    "@effect/cli": "^0.72.1",
    "@effect/platform": "^0.93.3",
    "@effect/platform-bun": "^0.83.0",
    "effect": "^3.19.4",
    "gray-matter": "^4.0.3",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@effect/language-service": "^0.56.0",
    "@types/node": "^24.10.1",
    "bun-types": "^1.3.2",
    "typescript": "^5"
  },
  "keywords": [
    "effect",
    "typescript",
    "best-practices",
    "cli",
    "docs"
  ],
  "author": "Kit Langton",
  "license": "MIT"
}
