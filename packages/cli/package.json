{
  "name": "effect-solutions",
  "version": "0.3.5",
  "description": "Docs + helper CLI for Effect TypeScript best practices",
  "type": "module",
  "bin": {
    "effect-solutions": "./bin.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "bun build src/cli.ts --outdir dist --target bun",
    "build:js": "bun build src/cli.ts --target bun --outfile dist/cli.js",
    "build:targets": "bun run scripts/build-binaries.ts",
    "build:artifacts": "bun run generate:manifest && bun run clean && mkdir -p dist && bun run build:js && bun run build:targets",
    "build:exe": "bun build src/cli.ts --compile --outfile dist/effect-solutions",
    "generate:manifest": "bun run scripts/generate-manifest.ts",
    "prepublishOnly": "bun run build:artifacts",
    "dev": "bun src/cli.ts",
    "prepare": "[ -n \"$CI\" ] || bunx effect-language-service patch"
  },
  "files": [
    "bin.js",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "dependencies": {
    "@effect/cli": "^0.72.1",
    "@effect/platform": "^0.93.3",
    "@effect/platform-bun": "^0.84.0",
    "effect": "^3.19.6",
    "gray-matter": "^4.0.3",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@effect/language-service": "^0.56.0",
    "@types/node": "^24.10.1",
    "bun-types": "^1.3.2",
    "typescript": "^5"
  },
  "keywords": [
    "effect",
    "typescript",
    "best-practices",
    "cli",
    "docs"
  ],
  "author": "Kit Langton",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kitlangton/effect-solutions.git",
    "directory": "packages/cli"
  }
}
