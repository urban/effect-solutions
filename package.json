{
  "name": "effect-best-practices",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./index.ts",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --cwd packages/website dev",
    "dev:cli": "bun --cwd packages/cli dev",
    "build": "bun --filter '*' build",
    "build:website": "bun --cwd packages/website build",
    "build:cli": "cd packages/cli && bun run build:artifacts",
    "generate:og": "cd packages/website && bun run generate:og",
    "generate:manifest": "bun --cwd packages/cli scripts/generate-manifest.ts",
    "changeset": "bun scripts/changeset-named.ts",
    "version": "changeset version && bun install",
    "release": "bun run generate:manifest && GITHUB_TOKEN=$(gh auth token) changeset version && changeset tag && git push --follow-tags",
    "test": "bun run generate:manifest && bunx vitest run",
    "test:docs": "vitest run tests",
    "typecheck:docs": "bun scripts/typecheck-docs.ts",
    "check": "biome check . --write && bunx tsc --build --force && bun run typecheck:docs && bun run test"
  },
  "dependencies": {
    "@effect/platform": "^0.93.3",
    "@next/mdx": "^16.0.4",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-visually-hidden": "^1.2.4",
    "cmdk": "^1.1.1",
    "effect": "^3.19.6",
    "ink": "^6.5.1",
    "next-mdx-remote": "^5.0.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@effect/cluster": "^0.53.5",
    "@effect/platform-node": "^0.101.1",
    "@effect/vitest": "^0.27.0",
    "vitest": "^4.0.13"
  }
}
